{
  "version": "1.0.0",
  "description": "My webpack project",
  "name": "my-webpack-project",
  "scripts": {
    "update": "git pull && npm run buildProd && npm run createResourceFile && npm run buildModuleProd",

    "startLIVEReload": "webpack-dev-server",

    "createResourceFile": "node createResourceFile.js",
