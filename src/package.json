{
  "version": "1.0.0",
  "description": "My webpack project",
  "name": "my-webpack-project",
  "scripts": {
    "update": "git pull && npm run coreProd && npm run createResourceFile && npm run coreModuleProd",

    "startLIVEReload": "webpack-dev-server",

    "createResourceFile": "node createResourceFile.js",
    "coreProd": "webpack --mode=production --config ./webpack.config.js",
    "coreModuleProd": "webpack --mode=production --config ./webpack.module.js",

    "coreDev": "webpack --mode=development --config ./webpack.config.js",
    "coreModuleDev": "webpack --mode=development --config ./webpack.module.js"
  }
}
