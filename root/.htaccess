# Закрыть доступ всем
# deny from all

Options +FollowSymLinks
RewriteEngine on
RewriteBase /
# Попадание в файл
RewriteCond %{REQUEST_FILENAME} !-f
# Попадание в директорию
#RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^?]*) /index.php?targetPage=$1 [L,QSA]

